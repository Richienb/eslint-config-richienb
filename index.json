{
	"rules": {
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"never"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		]
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"rules": {
				"quotes": "off",
				"@typescript-eslint/quotes": [
					"error",
					"double"
				],
				"semi": "off",
				"@typescript-eslint/semi": [
					"error",
					"never"
				],
				"object-curly-spacing": "off",
				"@typescript-eslint/object-curly-spacing": [
					"error",
					"always"
				],
				"@typescript-eslint/member-delimiter-style": [
					"error",
					{
						"multiline": {
							"delimiter": "none"
						},
						"singleline": {
							"delimiter": "comma"
						}
					}
				]
			}
		}
	]
}