{
	"rules": {
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"never"
		],
		"object-curly-spacing": [
			"error",
			"always"
		]
	},
	"overrides": [
		{
			"files": [
				"*.ts",
				"*.tsx"
			],
			"rules": {
				"@typescript-eslint/quotes": [
					"error",
					"double"
				],
				"@typescript-eslint/semi": [
					"error",
					"never"
				]
			}
		}
	]
}
